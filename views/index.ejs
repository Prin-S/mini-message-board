<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css" />
    <title>Home</title>
  </head>
  <body>
    <%- include('navbar', { links }) %>
    <h1>All messages</h1>
    <div class="container">
      <% messages.forEach(message => { %>
        <div class="box">
          <h3><%= message.user %></h3>
          <p><%= message.added.toLocaleString('en-GB') %></p>
          <p><a href="/message/<%= message.id %>">Open</a></p>
        </div>
      <% }); %>
    </div>
    <%- include('footer') %>
  </body>
</html>